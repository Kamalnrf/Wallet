<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.app.kamalnrf.wallet.WalletActivity">


    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27dp"
        android:text="Wallet"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:padding="20dp"
        android:layout_marginLeft="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:padding="10dp">

        <Button
            android:id="@+id/bank_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/bank_account"
            android:textColor="@color/white"
            style="@style/BankAccountButton"/>


        <Button
            android:id="@+id/identity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/identity"
            android:textColor="@color/white"
            style="@style/IdentityButton"/>

        <Button
            android:id="@+id/wifi_router"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/wifi_router"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            style="@style/WifiRoutertButton"/>

       <Button
            android:id="@+id/licence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
           android:layout_marginBottom="10dp"
            android:text="@string/licence"
           android:textColor="@color/white"
           style="@style/LicenceButton"/>

       <!-- <Button
            android:id="@+id/passport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/passport"/>

        <Button
            android:id="@+id/credit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/credit_card"/> -->


    </LinearLayout>



</LinearLayout>
